<h2>Add a new movie</h2>

<form action="/insert_movie_record">
  <div class="form-group">
    <label for="title_box">
      Title
    </label>

    <input type="text" id="title_box" name="input_title" class="form-control">
  </div>

  <div class="form-group">
    <label for="year_box">
      Year
    </label>
  
    <input type="text" id="year_box" name="input_year" class="form-control">
  </div>

  <div class="form-group">
    <label for="description_box">
      Description
    </label>

    <textarea id="description_box" name="input_description" rows="3" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="duration_box">
      Duration
    </label>

    <input type="text" id="duration_box" name="input_duration" class="form-control">
  </div>

  <div class="form-group">
    <label for="image_box">
      Image
    </label>

    <input id="image_box" name="input_image_url" class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="director_id_box">
      Director
    </label>

    <select id="director_id_box" name="input_director_id" class="form-control">
      <% Director.order(:name).each do |director| %>
        <option value="<%= director.id %>">
          <%= director.name %>
        </option>
      <% end %>
    </select>
  </div>

  <button class="btn btn-success btn-block">
    Add movie
  </button>
</form>

<hr>

<h1>
  All movies
</h1>

<table class="table">
  <tr>
    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image %>" width="100">
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <a href="/directors/<%= movie.director_id %>">
        <%= movie.director.name %>
      </a>
    </td>

    <td>
      <a href="/movies/<%= movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
